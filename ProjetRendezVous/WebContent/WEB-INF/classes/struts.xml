<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<constant name="struts.devMode" value="false" />

	<package name="fr.rendezvous.beanAction" namespace="/" extends="struts-default">
		<action name="Menu">
			<result> /menu/Menu.jsp</result>
			
		</action>
		<action name="valider" class="fr.rendezvous.beanAction.EtudiantAction" method="inscrire">
			<result name="success">/formulaire/ControlleurEtudiant.jsp</result>
			<result name="error">/formulaire/erreur.jsp</result>
			<result name="input">/formulaire/textabsant.jsp</result>
		</action>
		<action name="lister_Etudiant" class="fr.rendezvous.beanAction.EtudiantAction" method="listeinscrit">
			<result name="success">/formulaire/ListeEtudiant.jsp</result>
			<result name="error">/formulaire/erreur.jsp</result>
			<result name="input">/formulaire/textabsant.jsp</result>
		</action>
		<action name="compte">
			<result>/formulaire/formulaireEtudiant.jsp</result>
			
		</action>
	      <action name="Connexion">
				<result>/connexion/Connexion.jsp</result>
			
		</action>
		<action name="identificationUtilisateur" class="fr.rendezvous.beanAction.UtilisateurAction" method="identifierUtilisateurs">
            <result name="success">/connexion/success.jsp</result>
        	<result name="error">/connexion/Connexion.jsp</result>
         </action>
		
	</package>

</struts>